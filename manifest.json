 {
     "manifest_version": 2,
     "name":    "Grade Notifier",
     "version": "1.0",
     "description": "Chrome extension component for Grade Notifier",

     "background": {
     "persistent": false,
     "scripts": ["background.js"]
   },

     "browser_action": {
         "default_title": "Grade Notifier"
     },

     "author": "Grade Notifier Inc.",

     "content_scripts": [{
         "matches": ["<all_urls>"],
         "js":      ["content.js"]
     }],

     "permissions": ["<all_urls>"]
 }
